<style>
  /* Pulse animation for active status indicators */
  .status-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: .5;
    }
  }

  /* Smooth progress bar animation */
  .progress-bar {
    transition: width 0.3s ease-in-out;
  }
</style>
