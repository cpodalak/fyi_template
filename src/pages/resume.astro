---
import Layout from '../components/Layout.astro';
import CapabilityMatrix from '../components/CapabilityMatrix.tsx';
import { getEntry, getCollection } from 'astro:content';

// Get data from content collections
const profileData = await getEntry('profile', 'main');

// Get capabilities from all categories
const technicalCapabilities = await getEntry('capabilities', 'technical');
const aiCapabilities = await getEntry('capabilities', 'ai');
const leadershipCapabilities = await getEntry('capabilities', 'leadership');
const domainCapabilities = await getEntry('capabilities', 'domain');

// Get learning goals
const learningGoals = await getEntry('learning', 'goals');

// Get featured projects for impact section
const featuredProjects = (await getCollection('projects'))
  .filter(project => project.data.featured)
  .sort((a, b) => a.data.order - b.data.order);

// Combine all capabilities
const allCapabilities = [
  ...(technicalCapabilities?.data.items || []),
  ...(aiCapabilities?.data.items || []),
  ...(leadershipCapabilities?.data.items || []),
  ...(domainCapabilities?.data.items || [])
];
---

<Layout
  title="Capability Matrix"
  description="Dynamic capability overview, project impact, and continuous learning journey - beyond traditional resumes."
>
  <div class="py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-gray-100 mb-4">
          Capability Matrix
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto mb-8">
          Moving beyond traditional resumes to showcase dynamic capabilities, impact-driven projects,
          and continuous learning in the AI era.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={`mailto:${profileData?.data.email}`} class="btn-primary">
            Let's Collaborate
          </a>
          <a href="/projects" class="btn-secondary">
            Explore Projects
          </a>
        </div>
      </div>

      <div class="space-y-16">
        <!-- Core Identity & Contact -->
        <section class="text-center">
          <div class="space-y-3">
            <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100">{profileData?.data.tagline || 'Systems Engineer + AI Enabler'}</h2>
            <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
              {profileData?.data.bio || 'Bridging traditional automotive/embedded expertise with AI-powered development workflows.'}
            </p>
            <div class="flex justify-center space-x-6 mt-6">
              <a href={`mailto:${profileData?.data.email}`} class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors">
                📧 Email
              </a>
              {profileData?.data.social?.map((social) => (
                <a href={social.url} target="_blank" rel="noopener noreferrer" class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 transition-colors">
                  {social.icon} {social.platform}
                </a>
              ))}
            </div>
          </div>
        </section>

        <section>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-8 text-center">
            Quick Stats
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
            <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
              <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">
                10+
              </div>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                Years Experience
              </div>
            </div>
            <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
              <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">
                25+
              </div>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                Technologies
              </div>
            </div>
            <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
              <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">
                15+
              </div>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                Projects
              </div>
            </div>
            <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
              <div class="text-3xl font-bold text-blue-600 dark:text-blue-400 mb-2">
                5+
              </div>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                Domains
              </div>
            </div>
          </div>
        </section>

        <!-- Interactive Capability Matrix -->
        <section>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-8 text-center">
            Interactive Capability Matrix
          </h2>
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
            <CapabilityMatrix capabilities={allCapabilities} client:load />
          </div>
        </section>

        <!-- Featured Projects -->
        <section>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-8 text-center">
            Featured Projects
          </h2>
          <div class="space-y-8">
            {featuredProjects.map((project, index) => (
              <div class="border-l-4 border-blue-500 pl-8 pb-8">
                <div class="absolute w-4 h-4 bg-blue-500 rounded-full -left-2 top-0"></div>
                <div class="flex flex-col lg:flex-row lg:justify-between lg:items-start mb-3">
                  <div>
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100">{project.data.title}</h3>
                    <p class="text-gray-600 dark:text-gray-400">{project.data.status}</p>
                  </div>
                  <div class="flex gap-2 mt-2 lg:mt-0">
                    {project.data.stack.map((tech) => (
                      <span class="text-xs text-gray-500 bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>
                <p class="text-gray-700 dark:text-gray-300 mb-4">
                  {project.data.description}
                </p>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
                  {project.data.metrics?.map((metric) => (
                    <div class="bg-green-50 dark:bg-green-900/20 p-3 rounded">
                      <div class="font-semibold text-green-800 dark:text-green-200">{metric.label}</div>
                      <div class="text-green-600 dark:text-green-300">{metric.value}</div>
                      {metric.description && (
                        <div class="text-xs text-green-600 dark:text-green-400 mt-1">{metric.description}</div>
                      )}
                    </div>
                  ))}
                </div>
                <div class="flex flex-wrap gap-2 mt-4">
                  {project.data.tags.map((tag) => (
                    <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-200 text-xs rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </section>
        <!-- Learning Journey & Growth -->
        <section>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-8 text-center">
            Continuous Learning & Growth
          </h2>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Current Focus -->
            <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 p-6 rounded-lg">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center">
                🎯 Current Focus Areas
              </h3>
              <div class="space-y-3">
                <div class="flex items-center justify-between">
                  <span class="text-gray-700 dark:text-gray-300">Large Language Models Integration</span>
                  <span class="text-xs bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 px-2 py-1 rounded">Active</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-gray-700 dark:text-gray-300">Rust for Systems Programming</span>
                  <span class="text-xs bg-green-100 dark:bg-green-900 text-green-700 dark:text-green-300 px-2 py-1 rounded">Learning</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-gray-700 dark:text-gray-300">Edge Computing & IoT</span>
                  <span class="text-xs bg-purple-100 dark:bg-purple-900 text-purple-700 dark:text-purple-300 px-2 py-1 rounded">Exploring</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-gray-700 dark:text-gray-300">Advanced Prompt Engineering</span>
                  <span class="text-xs bg-orange-100 dark:bg-orange-900 text-orange-700 dark:text-orange-300 px-2 py-1 rounded">Mastering</span>
                </div>
              </div>
            </div>

            <!-- Recent Achievements -->
            <div class="bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 p-6 rounded-lg">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4 flex items-center">
                🏆 Recent Achievements
              </h3>
              <div class="space-y-3">
                <div class="flex items-center justify-between">
                  <span class="text-gray-700 dark:text-gray-300">AI-Powered Code Review System</span>
                  <span class="text-xs bg-green-100 dark:bg-green-900 text-green-700 dark:text-green-300 px-2 py-1 rounded">2024</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-gray-700 dark:text-gray-300">AUTOSAR Certification (Adaptive Platform)</span>
                  <span class="text-xs bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 px-2 py-1 rounded">2023</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-gray-700 dark:text-gray-300">Open Source Contribution Streak</span>
                  <span class="text-xs bg-purple-100 dark:bg-purple-900 text-purple-700 dark:text-purple-300 px-2 py-1 rounded">365 days</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-gray-700 dark:text-gray-300">Technical Blog Launch</span>
                  <span class="text-xs bg-orange-100 dark:bg-orange-900 text-orange-700 dark:text-orange-300 px-2 py-1 rounded">2023</span>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Expertise Evolution -->
        <section>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-8 text-center">
            Expertise Evolution
          </h2>
          <div class="relative">
            <!-- Timeline -->
            <div class="absolute left-1/2 transform -translate-x-px h-full w-0.5 bg-gray-300 dark:bg-gray-600"></div>

            <div class="space-y-12">
              <!-- 2024: AI Integration -->
              <div class="relative flex items-center">
                <div class="flex-1 pr-8 text-right">
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">AI-Enhanced Development</h3>
                  <p class="text-gray-600 dark:text-gray-400 text-sm">Bridging traditional automotive engineering with AI-powered workflows</p>
                </div>
                <div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-purple-500 rounded-full border-4 border-white dark:border-gray-900"></div>
                <div class="flex-1 pl-8">
                  <span class="text-sm font-medium text-purple-600 dark:text-purple-400">2024</span>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Custom AI prompts • Automated testing • Code generation</p>
                </div>
              </div>

              <!-- 2022: DevOps Transformation -->
              <div class="relative flex items-center">
                <div class="flex-1 pr-8 text-right">
                  <span class="text-sm font-medium text-blue-600 dark:text-blue-400">2022</span>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">CI/CD pipelines • Infrastructure as Code • Container orchestration</p>
                </div>
                <div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-blue-500 rounded-full border-4 border-white dark:border-gray-900"></div>
                <div class="flex-1 pl-8">
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">DevOps Transformation</h3>
                  <p class="text-gray-600 dark:text-gray-400 text-sm">Modernizing embedded development with cloud-native practices</p>
                </div>
              </div>

              <!-- 2019: Safety-Critical Focus -->
              <div class="relative flex items-center">
                <div class="flex-1 pr-8 text-right">
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Safety-Critical Systems</h3>
                  <p class="text-gray-600 dark:text-gray-400 text-sm">Mastering ISO 26262 and functional safety principles</p>
                </div>
                <div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-green-500 rounded-full border-4 border-white dark:border-gray-900"></div>
                <div class="flex-1 pl-8">
                  <span class="text-sm font-medium text-green-600 dark:text-green-400">2019</span>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">ISO 26262 • ASIL decomposition • Hazard analysis</p>
                </div>
              </div>

              <!-- 2015: AUTOSAR Foundation -->
              <div class="relative flex items-center">
                <div class="flex-1 pr-8 text-right">
                  <span class="text-sm font-medium text-orange-600 dark:text-orange-400">2015</span>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Classic Platform • BSW • RTE configuration</p>
                </div>
                <div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-orange-500 rounded-full border-4 border-white dark:border-gray-900"></div>
                <div class="flex-1 pl-8">
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">AUTOSAR Foundation</h3>
                  <p class="text-gray-600 dark:text-gray-400 text-sm">Building expertise in automotive software architecture</p>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Philosophy & Approach -->
        <section class="bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900 p-8 rounded-lg">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6 text-center">
            Engineering Philosophy
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-3 flex items-center">
                🔮 Future-Ready Approach
              </h3>
              <p class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed">
                Embracing AI as a force multiplier while maintaining deep technical fundamentals.
                I believe the future belongs to engineers who can seamlessly blend traditional expertise
                with AI-enhanced workflows to solve complex problems faster and more creatively.
              </p>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-3 flex items-center">
                🚀 Continuous Evolution
              </h3>
              <p class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed">
                Technology evolves rapidly, and so must we. I actively experiment with new tools,
                contribute to open source, and share learnings through documentation and prompts.
                Every project is an opportunity to push boundaries and learn something new.
              </p>
            </div>
          </div>
        </section>
      </div>

      <!-- Action-Oriented Footer -->
      <div class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-800 text-center">
        <p class="text-lg text-gray-700 dark:text-gray-300 mb-6">
          Ready to explore how traditional expertise + AI can accelerate your next project?
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={`mailto:${profileData?.data.email}`} class="btn-primary">
            🚀 Start a Conversation
          </a>
          <a href="/learnings" class="btn-secondary">
            🧠 Explore My Toolkit
          </a>
          <a href="/projects" class="btn-secondary">
            💼 See Projects in Action
          </a>
        </div>

        <div class="mt-8 pt-6 border-t border-gray-100 dark:border-gray-700">
          <p class="text-sm text-gray-500 dark:text-gray-500">
            This capability matrix evolves continuously. Last updated: <span class="font-medium">December 2024</span>
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>
